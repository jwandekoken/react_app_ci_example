{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "react/react-in-jsx-scope": "off"
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "plugins": [
      "prettier"
    ]
  }
}
